    color: #1e3a8a;
  }
  
  .reading-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
  }
  
  .reading-nav-btn {
    padding: 1rem 1.5rem;
    background: white;
    border: 2px solid #cbd5e1;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 500;
    color: #334155;
    min-width: 140px;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
  }
  
  .reading-nav-btn:hover {
    background: #f8fafc;
    border-color: #94a3b8;
  }
</style>
