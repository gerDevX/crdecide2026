    font-weight: bold;
    color: #0f172a;
    margin-bottom: 1rem;
    font-family: Georgia, serif;
  }
  
  .reading-subtitle {
    font-size: 1.5rem;
    font-weight: bold;
    color: #0f172a;
    margin-bottom: 0.5rem;
    font-family: Georgia, serif;
  }
  
  .reading-body {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #334155;
    font-family: Georgia, serif;
  }
  
  .reading-divider {
    border-top: 1px solid #cbd5e1;
    margin: 2rem 0;
  }
  
  .reading-candidate-item {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }
  
