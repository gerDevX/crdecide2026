---
import type { Candidate, CandidateScore } from '../../../lib/types';
import ExpressCard from './ExpressCard.astro';

interface Props {
  candidates: Array<{
    candidate: Candidate;
    score: CandidateScore;
    rank: number;
  }>;
  fiscalStats?: {
    lowRisk: number;
    mediumRisk: number;
    highRisk: number;
    attackFiscalRule: number;
    proposeDebt: number;
    ignoreSecurity: number;
    ignoreCCSS: number;
  };
}

const { candidates, fiscalStats } = Astro.props;

// Create list of candidates for the dropdown
const candidateList = candidates.map(c => ({
  id: c.candidate.candidate_id,
  candidateName: c.candidate.candidate_name !== 'Por determinar' && c.candidate.candidate_name !== 'no_especificado'
    ? c.candidate.candidate_name
    : c.candidate.party_name,
  partyName: c.candidate.party_name,
  rank: c.rank,
}));
---

<div class="express-list-container">
  <!-- Fiscal Risk Section (before filters) -->
  {fiscalStats && (
    <div class="express-fiscal-section">
      <div class="express-fiscal-header">
        <h2 class="express-fiscal-title">‚ö†Ô∏è Riesgo Fiscal y Responsabilidad</h2>
        <p class="express-fiscal-subtitle">Evaluamos si los planes comprometen la estabilidad financiera o omiten urgencias nacionales</p>
      </div>
      
      <div class="express-fiscal-content">
        <div class="express-fiscal-explanation">
          <p>Analizamos dos tipos de penalizaciones:</p>
          <div class="express-fiscal-types">
            <div class="express-fiscal-type express-fiscal-red">
              <span>üî¥</span>
              <div>
                <strong>Fiscales:</strong> Atacan la regla fiscal o proponen m√°s deuda sin plan de sostenibilidad
              </div>
            </div>
            <div class="express-fiscal-type express-fiscal-amber">
              <span>üü†</span>
              <div>
                <strong>Omisiones:</strong> Ignoran urgencias como seguridad operativa o crisis de la CCSS
              </div>
            </div>
          </div>
        </div>
        
        <div class="express-fiscal-stats">
          <div class="express-fiscal-stat express-stat-low">
            <div class="express-stat-number">{fiscalStats.lowRisk}</div>
            <div class="express-stat-label">üü¢ Bajo</div>
          </div>
          <div class="express-fiscal-stat express-stat-medium">
            <div class="express-stat-number">{fiscalStats.mediumRisk}</div>
            <div class="express-stat-label">üü† Medio</div>
          </div>
          <div class="express-fiscal-stat express-stat-high">
            <div class="express-stat-number">{fiscalStats.highRisk}</div>
            <div class="express-stat-label">üî¥ Alto</div>
          </div>
        </div>
        
        <div class="express-fiscal-details">
          <div class="express-fiscal-detail">
            <span class="express-detail-icon">‚ö†Ô∏è</span>
            <span class="express-detail-text"><strong>{fiscalStats.attackFiscalRule}</strong> atacan la regla fiscal</span>
          </div>
          <div class="express-fiscal-detail">
            <span class="express-detail-icon">üí∞</span>
            <span class="express-detail-text"><strong>{fiscalStats.proposeDebt}</strong> proponen m√°s deuda</span>
          </div>
          <div class="express-fiscal-detail">
            <span class="express-detail-icon">üö®</span>
            <span class="express-detail-text"><strong>{fiscalStats.ignoreSecurity}</strong> ignoran seguridad</span>
          </div>
          <div class="express-fiscal-detail">
            <span class="express-detail-icon">üè•</span>
            <span class="express-detail-text"><strong>{fiscalStats.ignoreCCSS}</strong> ignoran crisis CCSS</span>
          </div>
        </div>
        
        <p class="express-fiscal-note">
          Basado en el texto literal de los planes. <a href="/metodologia#penalizaciones" class="express-fiscal-link">Ver metodolog√≠a ‚Üí</a>
        </p>
      </div>
    </div>
  )}

  <!-- Header with Filter -->
  <div class="express-header">
    <div class="header-content">
      <h1 class="express-title">
        <span class="title-icon">üó≥Ô∏è</span>
        Candidatos 2026
      </h1>
      <p class="express-subtitle">{candidates.length} partidos ordenados por puntaje</p>
    </div>
    
    <!-- Party Selector -->
    <div class="filter-container">
      <label for="party-select" class="filter-label">Filtrar por candidato:</label>
      <div class="select-wrapper">
        <select id="party-select" class="party-select">
          <option value="">Todos los candidatos</option>
          {candidateList.map(candidate => (
            <option value={candidate.id}>
              #{candidate.rank} - {candidate.candidateName} ({candidate.partyName})
            </option>
          ))}
        </select>
        <svg class="select-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </div>
      
      <!-- Quick filter buttons -->
      <div class="quick-filters">
        <button class="quick-filter-btn active" data-filter="all">
          Todos
        </button>
        <button class="quick-filter-btn" data-filter="top5">
          üèÜ Top 5
        </button>
        <button class="quick-filter-btn" data-filter="top10">
          ‚≠ê Top 10
        </button>
      </div>
    </div>
  </div>

  <!-- Candidates List -->
  <div class="express-list" id="candidates-list">
    {candidates.map(({ candidate, score, rank }) => (
      <div 
        class="express-list-item" 
        data-candidate-id={candidate.candidate_id}
        data-rank={rank}
      >
        <ExpressCard 
          candidate={candidate} 
          score={score} 
          rank={rank}
          totalCandidates={candidates.length}
        />
      </div>
    ))}
    
    <!-- No results message -->
    <div id="no-results" class="no-results hidden">
      <div class="no-results-icon">üîç</div>
      <p class="no-results-text">Selecciona un partido del men√∫</p>
    </div>
  </div>
</div>

<script>
  const partySelect = document.getElementById('party-select') as HTMLSelectElement;
  const quickFilterBtns = document.querySelectorAll('.quick-filter-btn') as NodeListOf<HTMLButtonElement>;
  const listItems = document.querySelectorAll('.express-list-item') as NodeListOf<HTMLElement>;
  const noResults = document.getElementById('no-results');
  
  function showAll() {
    listItems.forEach(item => {
      item.style.display = 'block';
      item.style.animation = 'fadeIn 0.2s ease-out';
    });
    if (noResults) noResults.classList.add('hidden');
  }
  
  function filterByParty(partyId: string) {
    if (!partyId) {
      showAll();
      return;
    }
    
    let found = false;
    listItems.forEach(item => {
      if (item.dataset.candidateId === partyId) {
        item.style.display = 'block';
        item.style.animation = 'slideUp 0.3s ease-out';
        found = true;
        // Scroll to the item
        setTimeout(() => {
          item.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }, 100);
      } else {
        item.style.display = 'none';
    }
    });
    
    if (noResults) {
      noResults.classList.toggle('hidden', found);
    }
  }
  
  function filterByRank(filter: string) {
    let maxRank = Infinity;
    
    if (filter === 'top5') maxRank = 5;
    else if (filter === 'top10') maxRank = 10;
    
    listItems.forEach(item => {
      const rank = parseInt(item.dataset.rank || '999', 10);
      if (rank <= maxRank) {
        item.style.display = 'block';
        item.style.animation = 'fadeIn 0.2s ease-out';
      } else {
        item.style.display = 'none';
      }
    });
    
    if (noResults) noResults.classList.add('hidden');
  }
  
  // Party select handler
  partySelect?.addEventListener('change', (e) => {
    const value = (e.target as HTMLSelectElement).value;
    filterByParty(value);
    
    // Reset quick filter buttons
    quickFilterBtns.forEach(btn => btn.classList.remove('active'));
    if (!value) {
      quickFilterBtns[0]?.classList.add('active');
    }
  });
  
  // Quick filter buttons handler
  quickFilterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;
      
      // Update active state
      quickFilterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Reset select
      if (partySelect) partySelect.value = '';
      
      // Apply filter
      if (filter === 'all') {
        showAll();
      } else {
        filterByRank(filter || 'all');
      }
  });
  });
</script>

