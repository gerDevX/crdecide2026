---
import type { Candidate, CandidateScore, PillarScore } from '../../../lib/types';
import { pillarIndex } from '../../../lib/data';

interface Props {
  candidate: Candidate;
  score: CandidateScore;
  rank: number;
  totalCandidates: number;
}

const { candidate, score, rank, totalCandidates } = Astro.props;

// Calculate percentage score
const scorePercent = Math.round(score.overall.weighted_sum * 100);

// Get top 6 pillar scores with percentages
const topPillars = score.pillar_scores
  .slice(0, 6)
  .map(ps => ({
    ...ps,
    pillar: pillarIndex[ps.pillar_id],
    scorePercent: Math.round((ps.effective_score / 4) * 100),
  }));
---

<div class="express-card">
  <!-- Header Row -->
  <div class="card-header-row">
    <div class="rank-badge" class:list={{ 'top-3': rank <= 3 }}>
        #{rank}
    </div>
    <div class="party-info">
      <h2 class="candidate-title">
        {candidate.candidate_name !== 'Por determinar' && candidate.candidate_name !== 'no_especificado' 
          ? candidate.candidate_name 
          : candidate.party_name}
      </h2>
      <p class="party-subtitle">{candidate.party_name}</p>
    </div>
    <div class="main-score">
      <span class="score-number">{scorePercent}</span>
      <span class="score-percent">%</span>
    </div>
    </div>

    <!-- Score Bar -->
  <div class="score-bar-container">
    <div class="score-bar" style={`width: ${scorePercent}%`}></div>
    </div>

  <!-- Pillars Grid -->
  <div class="pillars-grid">
    {topPillars.map(({ pillar_id, effective_score, pillar, scorePercent }) => {
      const isHigh = scorePercent >= 75;
      const isMedium = scorePercent >= 50 && scorePercent < 75;
      
        return (
        <div class={`pillar-item ${isHigh ? 'high' : isMedium ? 'medium' : 'low'}`}>
          <span class="pillar-label">{pillar?.pillar_name?.split(' ').slice(0, 2).join(' ') || pillar_id}</span>
          <span class="pillar-score">{scorePercent}%</span>
          </div>
        );
      })}
    </div>

  <!-- Actions -->
  <div class="card-actions">
    <a href={`/candidatos/${candidate.candidate_id}`} class="action-btn secondary">
      Ver detalles
      </a>
    <a href={`/comparar?c=${candidate.candidate_id}`} class="action-btn primary">
        Comparar
      </a>
  </div>
</div>

<style>
