---
import type { Pillar, PillarId } from '../../lib/types';
import { PILLAR_ICONS } from '../../lib/types';
import ScoreBar from '../ui/ScoreBar.astro';

interface Props {
  pillar: Pillar;
  avgScore: number;
  topCandidate?: {
    name: string;
    score: number;
  };
  isPriority?: boolean;
  rank?: number;
  class?: string;
}

const { pillar, avgScore, topCandidate, isPriority = false, rank, class: className = '' } = Astro.props;

const icon = PILLAR_ICONS[pillar?.pillar_id as PillarId] || 'ðŸ“Œ';
const weightPercent = Math.round((pillar?.weight || 0) * 100);
---

<a
  href={`/pilares/${pillar?.pillar_id?.toLowerCase()}`}
  class={`pillar-card block group ${isPriority ? 'priority' : ''} pillar-${pillar?.pillar_id} ${className}`}
>
  <div class="pillar-card-inner">
    <!-- Priority glow effect -->
    {isPriority && (
      <div class="absolute inset-0 bg-gradient-to-br from-red-500/5 to-orange-500/5 rounded-2xl"></div>
    )}
    
    <div class="relative p-5">
      <div class="flex items-start justify-between mb-3">
        <div class="flex items-center gap-2">
          <span class="pillar-icon" aria-hidden="true">{icon}</span>
          <span class="text-xs font-semibold text-slate-400 uppercase tracking-wider">{pillar?.pillar_id}</span>
          {rank && rank <= 4 && (
            <span class="rank-badge">#{rank}</span>
          )}
        </div>
        <span class={`weight-badge ${isPriority ? 'priority' : ''}`}>
          {weightPercent}%
        </span>
      </div>
      
      <h3 class="pillar-title">
        {pillar?.pillar_name}
      </h3>
      
      <div class="space-y-2 mt-3">
        <div class="flex items-center justify-between text-xs">
          <span class="text-slate-500">Promedio</span>
          <span class="font-semibold text-slate-700">{avgScore.toFixed(1)}/4</span>
        </div>
        <div class="score-bar-container">
          <div class="score-bar-fill" style={`width: ${(avgScore / 4) * 100}%`}></div>
        </div>
      </div>
      
      {topCandidate && (
        <div class="mt-3 pt-3 border-t border-slate-100">
          <div class="flex items-center justify-between text-xs">
            <span class="text-slate-500">LÃ­der:</span>
            <span class="font-semibold text-emerald-600 truncate ml-1 flex items-center gap-1">
              <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span>
              {topCandidate.name}
            </span>
          </div>
        </div>
      )}
    </div>
  </div>
</a>

<style>
  .pillar-card {
    position: relative;
    border-radius: 1rem;
    transition: all 0.3s ease;
  }
  
  .pillar-card-inner {
    position: relative;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .pillar-card:hover .pillar-card-inner {
    border-color: #06b6d4;
    box-shadow: 
      0 10px 40px -10px rgba(6, 182, 212, 0.2),
      0 0 0 1px rgba(6, 182, 212, 0.1);
    transform: translateY(-2px);
  }
  
  .pillar-card.priority .pillar-card-inner {
    border-left: 4px solid #f43f5e;
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.03) 0%, white 100%);
  }
  
  .pillar-card.priority:hover .pillar-card-inner {
    border-color: #f43f5e;
    box-shadow: 
      0 10px 40px -10px rgba(244, 63, 94, 0.2),
      0 0 0 1px rgba(244, 63, 94, 0.1);
  }
  
  .pillar-icon {
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .pillar-card:hover .pillar-icon {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(59, 130, 246, 0.2));
    transform: scale(1.1);
  }
  
  .rank-badge {
    font-size: 0.65rem;
    font-weight: 700;
    padding: 0.125rem 0.375rem;
    border-radius: 0.375rem;
    background: linear-gradient(135deg, #f43f5e, #ec4899);
    color: white;
  }
  
  .weight-badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    background: #f1f5f9;
    color: #64748b;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .weight-badge.priority {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.1), rgba(251, 113, 133, 0.1));
    color: #be123c;
  }
  
  .pillar-card:hover .weight-badge {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
    color: #0891b2;
  }
  
  .pillar-card.priority:hover .weight-badge {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.15), rgba(251, 113, 133, 0.15));
    color: #be123c;
  }
  
  .pillar-title {
    font-weight: 600;
    font-size: 0.9rem;
    color: #0f172a;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.3s ease;
  }
  
  .pillar-card:hover .pillar-title {
    color: #0891b2;
  }
  
  .pillar-card.priority:hover .pillar-title {
    color: #be123c;
  }
  
  .score-bar-container {
    height: 0.5rem;
    background: #f1f5f9;
    border-radius: 9999px;
    overflow: hidden;
  }
  
  .score-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #06b6d4, #3b82f6);
    border-radius: 9999px;
    transition: width 0.8s ease;
  }
  
  .pillar-card.priority .score-bar-fill {
    background: linear-gradient(90deg, #f43f5e, #ec4899);
  }
</style>
