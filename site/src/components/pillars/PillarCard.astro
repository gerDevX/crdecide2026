---
import type { Pillar, PillarId } from '../../lib/types';
import { PILLAR_ICONS } from '../../lib/types';

interface TopCandidateInfo {
  name: string;
  candidateName?: string;
  score: number;
  id: string;
}

interface Props {
  pillar: Pillar;
  avgScore: number;
  topCandidates?: TopCandidateInfo[];
  isPriority?: boolean;
  rank?: number;
  class?: string;
}

const { pillar, avgScore, topCandidates = [], isPriority = false, rank, class: className = '' } = Astro.props;

const icon = PILLAR_ICONS[pillar?.pillar_id as PillarId] || 'üìå';
const weightPercent = Math.round((pillar?.weight || 0) * 100);
const avgPercent = Math.round((avgScore / 4) * 100);

// Get top 5 candidates
const top5 = topCandidates.slice(0, 5);
---

<a
  href={`/pilares/${pillar?.pillar_id?.toLowerCase()}`}
  class={`pillar-card block group ${isPriority ? 'priority' : ''} pillar-${pillar?.pillar_id} ${className}`}
>
  <div class="pillar-card-inner">
    <!-- Priority indicator -->
    {isPriority && (
      <div class="priority-indicator"></div>
    )}
    
    <div class="card-content">
      <!-- Header -->
      <div class="card-header">
        <div class="header-left">
          <span class="pillar-icon">{icon}</span>
          <div class="pillar-meta">
            <span class="pillar-id">{pillar?.pillar_id}</span>
        {rank && rank <= 4 && (
              <span class="rank-badge">#{rank}</span>
        )}
      </div>
        </div>
        <span class={`weight-badge ${isPriority ? 'priority' : ''}`}>
          Peso: {weightPercent}%
      </span>
    </div>
    
      <!-- Title -->
      <h3 class="pillar-title">
      {pillar?.pillar_name}
    </h3>
    
      <!-- Score Display -->
      <div class="score-display">
        <div class="score-main">
          <span class="score-number">{avgPercent}</span>
          <span class="score-symbol">%</span>
        </div>
        <span class="score-label">Promedio general</span>
      </div>
      
      <!-- Score Bar -->
      <div class="score-bar-container">
        <div class="score-bar-fill" style={`width: ${avgPercent}%`}></div>
    </div>
    
      <!-- Top 5 Candidates -->
      {top5.length > 0 && (
        <div class="top-candidates">
          <div class="top-header">
            <span class="top-title">üèÜ Top 5 en este pilar</span>
          </div>
          <div class="candidates-list">
            {top5.map((candidate, idx) => {
              const scorePercent = Math.round((candidate.score / 4) * 100);
              return (
                <div class="candidate-row">
                  <span class={`candidate-rank ${idx < 3 ? 'top3' : ''}`}>{idx + 1}</span>
                  <span class="candidate-name" title={candidate.name}>
                    {candidate.candidateName || candidate.name}
                  </span>
                  <span class={`candidate-score ${scorePercent === 100 ? 'perfect' : scorePercent >= 75 ? 'high' : ''}`}>
                    {scorePercent}%
                  </span>
                </div>
              );
            })}
          </div>
        </div>
      )}
      </div>
  </div>
</a>

<style>
  .pillar-card {
    position: relative;
    border-radius: 1rem;
    transition: all 0.3s ease;
  }
  
  .pillar-card-inner {
    position: relative;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
  }
  
  .pillar-card:hover .pillar-card-inner {
    border-color: #06b6d4;
    box-shadow: 0 15px 40px -10px rgba(6, 182, 212, 0.2);
    transform: translateY(-4px);
  }
  
  .pillar-card.priority .pillar-card-inner {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.02) 0%, white 100%);
  }
  
  .pillar-card.priority:hover .pillar-card-inner {
    border-color: #f43f5e;
    box-shadow: 0 15px 40px -10px rgba(244, 63, 94, 0.2);
  }
  
  .priority-indicator {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #f43f5e, #ec4899);
  }
  
  .card-content {
    padding: 1.25rem;
  }
  
  /* Header */
  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }
  
  .header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .pillar-icon {
    font-size: 1.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .pillar-card.priority .pillar-icon {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.1), rgba(236, 72, 153, 0.1));
  }
  
  .pillar-card:hover .pillar-icon {
    transform: scale(1.1) rotate(5deg);
  }
  
  .pillar-meta {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }
  
  .pillar-id {
    font-size: 0.7rem;
    font-weight: 700;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .rank-badge {
    font-size: 0.6rem;
    font-weight: 700;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    background: linear-gradient(135deg, #f43f5e, #ec4899);
    color: white;
    width: fit-content;
  }
  
  .weight-badge {
    font-size: 0.65rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    background: #f1f5f9;
    color: #64748b;
    font-weight: 600;
  }
  
  .weight-badge.priority {
    background: linear-gradient(135deg, rgba(244, 63, 94, 0.1), rgba(236, 72, 153, 0.1));
    color: #be123c;
  }
  
  /* Title */
  .pillar-title {
    font-weight: 700;
    font-size: 0.95rem;
    color: #0f172a;
    line-height: 1.3;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .pillar-card:hover .pillar-title {
    color: #0891b2;
  }
  
  .pillar-card.priority:hover .pillar-title {
    color: #be123c;
  }
  
  /* Score Display */
  .score-display {
    text-align: center;
    margin-bottom: 0.75rem;
  }
  
  .score-main {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.125rem;
  }
  
  .score-number {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1;
    background: linear-gradient(135deg, #06b6d4, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .pillar-card.priority .score-number {
    background: linear-gradient(135deg, #f43f5e, #ec4899);
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  .score-symbol {
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(135deg, #06b6d4, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .pillar-card.priority .score-symbol {
    background: linear-gradient(135deg, #f43f5e, #ec4899);
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  .score-label {
    font-size: 0.7rem;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Score Bar */
  .score-bar-container {
    height: 0.5rem;
    background: #f1f5f9;
    border-radius: 9999px;
    overflow: hidden;
    margin-bottom: 1rem;
  }
  
  .score-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #06b6d4, #3b82f6);
    border-radius: 9999px;
    transition: width 0.8s ease;
  }
  
  .pillar-card.priority .score-bar-fill {
    background: linear-gradient(90deg, #f43f5e, #ec4899);
  }
  
  /* Top Candidates */
  .top-candidates {
    border-top: 1px solid #f1f5f9;
    padding-top: 0.75rem;
  }
  
  .top-header {
    margin-bottom: 0.5rem;
  }
  
  .top-title {
    font-size: 0.7rem;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
  
  .candidates-list {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }
  
  .candidate-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.5rem;
    background: #f8fafc;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }
  
  .candidate-row:hover {
    background: #f1f5f9;
  }
  
  .candidate-rank {
    width: 1.25rem;
    height: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.65rem;
    font-weight: 700;
    background: #e2e8f0;
    color: #64748b;
    border-radius: 0.25rem;
    flex-shrink: 0;
  }
  
  .candidate-rank.top3 {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    color: white;
  }
  
  .candidate-name {
    flex: 1;
    font-size: 0.75rem;
    color: #475569;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .candidate-score {
    font-size: 0.75rem;
    font-weight: 700;
    color: #64748b;
    flex-shrink: 0;
  }
  
  .candidate-score.high {
    color: #059669;
  }
  
  .candidate-score.perfect {
    color: #059669;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1));
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }
</style>
