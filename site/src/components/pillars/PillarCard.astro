---
import type { Pillar, PillarId } from '../../lib/types';
import { PILLAR_ICONS } from '../../lib/types';
import ScoreBar from '../ui/ScoreBar.astro';

interface Props {
  pillar: Pillar;
  avgScore: number;
  topCandidate?: {
    name: string;
    score: number;
  };
  isPriority?: boolean;
  rank?: number;
  class?: string;
}

const { pillar, avgScore, topCandidate, isPriority = false, rank, class: className = '' } = Astro.props;

const icon = PILLAR_ICONS[pillar?.pillar_id as PillarId] || 'ðŸ“Œ';
const weightPercent = Math.round((pillar?.weight || 0) * 100);
---

<a
  href={`/pilares/${pillar?.pillar_id?.toLowerCase()}`}
  class={`card block group border-l-4 ${isPriority ? 'border-red-400 bg-red-50/30' : `pillar-${pillar?.pillar_id}`} ${className}`}
>
  <div class="p-4">
    <div class="flex items-start justify-between mb-2">
      <div class="flex items-center gap-2">
        <span class="text-xl" aria-hidden="true">{icon}</span>
        <span class="text-xs font-medium text-slate-400 uppercase">{pillar?.pillar_id}</span>
        {rank && rank <= 4 && (
          <span class="text-xs font-bold text-red-600">#{rank}</span>
        )}
      </div>
      <span class={`text-xs px-2 py-0.5 rounded-full ${
        isPriority 
          ? 'text-red-700 bg-red-100 font-medium' 
          : 'text-slate-500 bg-slate-100'
      }`}>
        {weightPercent}%
      </span>
    </div>
    
    <h3 class="font-semibold text-slate-900 group-hover:text-civic-600 transition-colors mb-2 line-clamp-2 text-sm">
      {pillar?.pillar_name}
    </h3>
    
    <div class="space-y-1">
      <div class="flex items-center justify-between text-xs">
        <span class="text-slate-500">Promedio</span>
        <span class="font-medium text-slate-700">{avgScore.toFixed(1)}/4</span>
      </div>
      <ScoreBar score={Math.round(avgScore)} max={4} showLabel={false} size="sm" />
    </div>
    
    {topCandidate && (
      <div class="mt-2 pt-2 border-t border-slate-100">
        <div class="flex items-center justify-between text-xs">
          <span class="text-slate-500">Mejor:</span>
          <span class="font-medium text-emerald-600 truncate ml-1">{topCandidate.name}</span>
        </div>
      </div>
    )}
  </div>
</a>
