  >
    <div class="px-4 py-3 space-y-1">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            'flex items-center gap-3 py-3 px-4 rounded-xl font-medium',
            currentPath.startsWith(item.href)
              ? 'bg-civic-100 text-civic-700'
              : 'text-slate-600 hover:bg-slate-50'
          ]}
        >
          <span class="text-xl">{item.icon}</span>
          {item.label}
        </a>
      ))}
      <div class="border-t border-slate-200 my-2 pt-2">
        <div class="px-4 py-2 text-xs font-semibold text-slate-400 uppercase tracking-wider flex items-center gap-2">
          <span>üîç</span> Transparencia
        </div>
        <a 
          href="/metodologia" 
          class:list={[
            'block py-3 px-4 rounded-xl',
            currentPath.startsWith('/metodologia')
              ? 'bg-civic-100 text-civic-700 font-medium'
              : 'text-slate-600 hover:bg-slate-50'
          ]}
        >
          üìê Metodolog√≠a
        </a>
        <a 
          href="/acerca" 
          class:list={[
            'block py-3 px-4 rounded-xl',
            currentPath.startsWith('/acerca')
              ? 'bg-civic-100 text-civic-700 font-medium'
              : 'text-slate-600 hover:bg-slate-50'
          ]}
        >
          ‚ÑπÔ∏è Acerca del proyecto
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Age configuration (primary) with corresponding mode
  const ageConfig: Record<string, { icon: string; label: string; mode: string }> = {
    '18-35': { icon: 'üöÄ', label: 'Modo Visual R√°pido', mode: 'express' },
    '36-49': { icon: 'üìä', label: 'Modo Visual Detallado', mode: 'dashboard' },
    '50+': { icon: 'üìñ', label: 'Modo Lectura', mode: 'reading' },
  };

  // Mode to age mapping
  const modeToAge: Record<string, string> = {
    express: '18-35',
    dashboard: '36-49',
    reading: '50+',
  };

  // Mode selector
  const modeBtn = document.getElementById('mode-selector-btn');
  const modeDropdown = document.getElementById('mode-dropdown');
  const modeIcon = document.getElementById('current-mode-icon');
  const modeLabel = document.getElementById('current-mode-label');
  const modeOptions = document.querySelectorAll('.mode-dropdown-option');

  // Update label from stored value (prefer age, fallback to mode)
  const storedAge = localStorage.getItem('costarica-decide-age-group');
  const storedMode = localStorage.getItem('costarica-decide-mode') || 'dashboard';
  const currentAge = storedAge || modeToAge[storedMode] || '36-49';
  
  if (modeIcon && modeLabel) {
    const config = ageConfig[currentAge] || ageConfig['36-49'];
    modeIcon.textContent = config.icon;
    modeLabel.textContent = config.label;
  }

  // Toggle dropdown
  modeBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    modeDropdown?.classList.toggle('hidden');
  });

  // Age/Mode selection
  modeOptions.forEach(opt => {
    opt.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const age = target.dataset.age;
      const mode = target.dataset.mode;
      
      if (age && mode) {
        // Set age group (primary)
        localStorage.setItem('costarica-decide-age-group', age);
        document.documentElement.setAttribute('data-age-group', age);
        
        // Set mode
        localStorage.setItem('costarica-decide-mode', mode);
        document.documentElement.setAttribute('data-mode', mode);
        
        // Update UI
        const config = ageConfig[age];
        if (modeIcon) modeIcon.textContent = config.icon;
        if (modeLabel) modeLabel.textContent = config.label;
        
        modeDropdown?.classList.add('hidden');
        window.location.reload();
      }
    });
  });

  // Close dropdown on outside click
  document.addEventListener('click', (e) => {
    if (!modeBtn?.contains(e.target as Node) && !modeDropdown?.contains(e.target as Node)) {
      modeDropdown?.classList.add('hidden');
    }
  });

  // Transparencia dropdown
  const transparenciaBtn = document.getElementById('transparencia-btn');
  const transparenciaDropdown = document.getElementById('transparencia-dropdown');

  transparenciaBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    transparenciaDropdown?.classList.toggle('hidden');
    // Close mode dropdown if open
    modeDropdown?.classList.add('hidden');
  });

  // Close transparencia dropdown on outside click
  document.addEventListener('click', (e) => {
    if (!transparenciaBtn?.contains(e.target as Node) && !transparenciaDropdown?.contains(e.target as Node)) {
      transparenciaDropdown?.classList.add('hidden');
    }
  });

  // Mobile menu
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileNav = document.getElementById('mobile-nav');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');

  mobileBtn?.addEventListener('click', () => {
    const isHidden = mobileNav?.classList.toggle('hidden');
    menuIconOpen?.classList.toggle('hidden', !isHidden);
    menuIconClose?.classList.toggle('hidden', isHidden);
  });
</script>

<style>
  .header-container {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.8);
    position: sticky;
    top: 0;
    z-index: 30;
    transition: all 0.3s ease;
  }
  
  .header-container:hover {
    background: rgba(255, 255, 255, 0.95);
  }
  
  /* Express mode header - coherente con dashboard */
  :global(html[data-mode="express"]) .header-container {
    background: rgba(255, 255, 255, 0.9);
    border-color: rgba(226, 232, 240, 0.8);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }
  
  /* Reading mode header */
  :global(html[data-mode="reading"]) .header-container {
    background: white;
    border-color: #cbd5e1;
    backdrop-filter: none;
  }
  
  .mode-dropdown-option {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
    background: transparent;
  }
  
  .mode-dropdown-option:hover {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
    transform: translateX(4px);
  }
  
  .mode-dropdown-option:focus {
    outline: none;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
  }
  
  .bg-gradient-ocean {
    background: linear-gradient(135deg, #0284c7 0%, #06b6d4 100%);
  }
  
  /* Animated underline for nav items */
  :global(.nav-link-aceternity) {
    position: relative;
  }
  
  :global(.nav-link-aceternity)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #06b6d4, #3b82f6);
    transition: all 0.3s ease;
    transform: translateX(-50%);
    border-radius: 9999px;
  }
  
  :global(.nav-link-aceternity):hover::after {
    width: 80%;
  }
  
  /* Logo animation */
  :global(.logo-gradient) {
    background: linear-gradient(135deg, #0284c7 0%, #06b6d4 50%, #0284c7 100%);
    background-size: 200% 200%;
    animation: logo-gradient-shift 3s ease infinite;
  }
  
  @keyframes logo-gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  /* Dropdown animation */
  #mode-dropdown,
  #transparencia-dropdown {
    transform-origin: top right;
    animation: dropdown-appear 0.2s ease-out;
  }
  
  @keyframes dropdown-appear {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-8px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
</style>
