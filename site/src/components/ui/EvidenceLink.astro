---
interface Props {
  pdfId: string;
  page: number;
  snippet?: string;
  compact?: boolean;
  class?: string;
}

const { pdfId, page, snippet, compact = false, class: className = '' } = Astro.props;

const pdfUrl = `/planes/${pdfId}.pdf#page=${page}`;
---

<div class={`${className}`}>
  {!compact && snippet && (
    <blockquote class="text-sm text-slate-600 italic border-l-2 border-slate-300 pl-3 mb-2 line-clamp-2">
      "{snippet}"
    </blockquote>
  )}
  <a
    href={pdfUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-1.5 text-sm text-civic-600 hover:text-civic-700 hover:underline"
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
    </svg>
    {compact ? (
      <span>p.{page}</span>
    ) : (
      <span>Ver en plan oficial (p√°gina {page})</span>
    )}
    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
    </svg>
  </a>
</div>
