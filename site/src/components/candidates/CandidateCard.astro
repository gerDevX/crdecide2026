---
import type { Candidate, CandidateScore, PillarId, FiscalRiskLevel } from '../../lib/types';
import { PILLAR_ICONS } from '../../lib/types';

interface Props {
  candidate: Candidate;
  score: CandidateScore;
  riskLevel?: FiscalRiskLevel;
  rank?: number;
  class?: string;
}

const { candidate, score, riskLevel = 'BAJO', rank, class: className = '' } = Astro.props;

const weightedSum = score.overall.weighted_sum;
const weightedPercent = Math.round(weightedSum * 100);

const getRiskBgClass = (level: FiscalRiskLevel) => {
  switch (level) {
    case 'BAJO': return 'risk-low';
    case 'MEDIO': return 'risk-medium';
    case 'ALTO': return 'risk-high';
  }
};
---

<a
  href={`/candidatos/${candidate.candidate_id}`}
  class={`candidate-card group ${getRiskBgClass(riskLevel)} ${className}`}
>
  <div class="card-inner">
    <!-- Rank Badge -->
    {rank && (
      <div class={`rank-badge ${rank <= 3 ? 'top-3' : ''}`}>
        {rank}
      </div>
    )}
    
    <!-- Header -->
    <div class="card-header">
      <span class="party-code">{candidate.pdf_id}</span>
      <h3 class="party-name">{candidate.party_name}</h3>
    </div>
    
    <!-- Score Display -->
    <div class="score-section">
      <div class="score-bar-container">
        <div class="score-bar" style={`width: ${weightedPercent}%`}></div>
      </div>
      <div class="score-value">{weightedPercent}%</div>
    </div>
    
    <!-- Mini Pillars Matrix -->
    <div class="pillars-grid">
      {score.pillar_scores.map((ps) => {
        const icon = PILLAR_ICONS[ps.pillar_id as PillarId];
        const intensity = ps.effective_score / 4;
        return (
          <div
            class="pillar-cell"
            style={`--intensity: ${intensity}`}
            title={`${ps.pillar_id}: ${ps.effective_score}/4`}
          >
            <span class="pillar-icon">{icon}</span>
          </div>
        );
      })}
    </div>
    
    <!-- Footer Stats -->
    <div class="card-footer">
      <span class="pillars-count">
        {score.pillar_scores.filter(ps => ps.effective_score === 4).length} pilares mÃ¡ximos
      </span>
      <span class={`risk-indicator ${riskLevel.toLowerCase()}`}>
        {riskLevel === 'BAJO' ? 'ðŸŸ¢' : riskLevel === 'MEDIO' ? 'ðŸŸ ' : 'ðŸ”´'}
      </span>
    </div>
    
    <!-- Hover Gradient -->
    <div class="hover-gradient"></div>
  </div>
</a>

<style>
  .candidate-card {
    display: block;
    border-radius: 1rem;
    transition: all 0.3s ease;
  }
  
  .card-inner {
    position: relative;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    padding: 1.25rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .candidate-card:hover .card-inner {
    border-color: #06b6d4;
    box-shadow: 
      0 20px 40px -15px rgba(6, 182, 212, 0.15),
      0 0 0 1px rgba(6, 182, 212, 0.1);
    transform: translateY(-4px);
  }
  
  .candidate-card.risk-high .card-inner {
    border-left: 4px solid #f43f5e;
  }
  
  .candidate-card.risk-medium .card-inner {
    border-left: 4px solid #f59e0b;
  }
  
  .candidate-card.risk-low .card-inner {
    border-left: 4px solid #10b981;
  }
  
  /* Rank Badge */
  .rank-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    width: 1.75rem;
    height: 1.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f1f5f9;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    color: #64748b;
    transition: all 0.3s ease;
  }
  
  .rank-badge.top-3 {
    background: linear-gradient(135deg, #06b6d4, #3b82f6);
    color: white;
    box-shadow: 0 4px 10px rgba(6, 182, 212, 0.3);
  }
  
  .candidate-card:hover .rank-badge {
    transform: scale(1.1);
  }
  
  /* Header */
  .card-header {
    margin-bottom: 0.75rem;
    padding-right: 2rem;
  }
  
  .party-code {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #94a3b8;
  }
  
  .party-name {
    font-size: 0.95rem;
    font-weight: 700;
    color: #0f172a;
    line-height: 1.3;
    margin: 0.25rem 0 0;
    transition: color 0.3s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .candidate-card:hover .party-name {
    color: #0891b2;
  }
  
  /* Score Section */
  .score-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }
  
  .score-bar-container {
    flex: 1;
    height: 0.5rem;
    background: #f1f5f9;
    border-radius: 9999px;
    overflow: hidden;
  }
  
  .score-bar {
    height: 100%;
    background: linear-gradient(90deg, #06b6d4, #3b82f6);
    border-radius: 9999px;
    transition: width 0.8s ease;
  }
  
  .candidate-card.risk-high .score-bar {
    background: linear-gradient(90deg, #f43f5e, #ec4899);
  }
  
  .candidate-card.risk-medium .score-bar {
    background: linear-gradient(90deg, #f59e0b, #f97316);
  }
  
  .score-value {
    font-size: 1.25rem;
    font-weight: 800;
    background: linear-gradient(135deg, #06b6d4, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .candidate-card.risk-high .score-value {
    background: linear-gradient(135deg, #f43f5e, #ec4899);
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  .candidate-card.risk-medium .score-value {
    background: linear-gradient(135deg, #f59e0b, #f97316);
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  /* Pillars Grid */
  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    gap: 0.25rem;
    margin-bottom: 0.75rem;
  }
  
  .pillar-cell {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    background: rgba(16, 185, 129, calc(var(--intensity) * 0.6 + 0.1));
    transition: all 0.2s ease;
  }
  
  .pillar-cell:hover {
    transform: scale(1.2);
    z-index: 1;
  }
  
  .pillar-icon {
    font-size: 0.65rem;
    opacity: 0.7;
  }
  
  /* Footer */
  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.75rem;
  }
  
  .pillars-count {
    color: #64748b;
  }
  
  .risk-indicator {
    font-size: 0.875rem;
  }
  
  /* Hover Gradient */
  .hover-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .candidate-card:hover .hover-gradient {
    opacity: 1;
  }
</style>
